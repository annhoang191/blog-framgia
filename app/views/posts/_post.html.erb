<h2><%= link_to post.title, post %></h2>
  <p class="lead">
    by
    <%= link_to post.user.name, user_path(id: post.user.id) %>
  </p>
  <p>
    <span class="glyphicon glyphicon-time"></span> Posted on <%= post.created_at %></p>
  <hr>
  <% if post.picture.present? %>
    <%= image_tag post.picture_url(:standard) %>
  <% end %>
  <p class="post-preview"><%= markdown post.content %></p>
  <a class="btn btn-primary" href="#">Read More
    <span class="glyphicon glyphicon-chevron-right"></span>
  </a>
